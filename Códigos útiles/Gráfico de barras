ggplot(medias_insecticida, aes(x = insecticida, y = media_insectos, fill = insecticida)) +
  geom_bar(stat = "identity", color = "black") +
  geom_errorbar(aes(ymin = media_insectos - sd_insectos,
                    ymax = media_insectos + sd_insectos),
                width = 0.2, color = "black") +
  geom_text(aes(label = round(media_insectos, 0)), 
            vjust = -0.8, size = 4) +
  labs(
    title = "Media de insectos por m² según insecticida",
    x = "Insecticida",
    y = "Media de insectos/m²"
  ) +
  theme_minimal(base_size = 13) +
  theme(legend.position = "none")
